<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.munibasiddiqi.basicphrasesapp.MainActivity">

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">



        <Button
            android:id="@+id/buttonHello"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Hello"
            android:tag="hello"
            android:onClick="PlayPhrase"/>

        <Button
            android:id="@+id/buttonGoodEvening"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Good Evening"
            android:tag="goodevening"
            android:onClick="PlayPhrase"/>

        <Button
            android:id="@+id/buttonHowAreYou"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="How Are You?"
            android:tag="howareyou"
            android:onClick="PlayPhrase"/>


        <Button
            android:id="@+id/buttonPlease"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Please"
            android:tag="please"
            android:onClick="PlayPhrase"/>

        <Button
            android:id="@+id/buttonWelcome"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Welcome"
            android:tag="welcome"
            android:onClick="PlayPhrase"/>

        <Button
            android:id="@+id/buttonMyNameIs"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="My Name Is"
            android:tag="mynameis"
            android:onClick="PlayPhrase"/>

        <Button
            android:id="@+id/buttonILiveIn"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="I Live In"
            android:tag="ilivein"
            android:onClick="PlayPhrase"/>

        <Button
            android:id="@+id/buttonDoYouSpeakEnglish"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Do You\nSpeak English?"
            android:tag="doyouspeakenglish"
            android:onClick="PlayPhrase"/>

    </GridLayout>
</android.support.constraint.ConstraintLayout>
